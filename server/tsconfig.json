{
	"compilerOptions": {
		"target": "es2020",
		"lib": ["es2020"],
		"module": "commonjs",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": true,
		"outDir": "out",
		"rootDir": "src"
	},
	"include": ["src"],
	"exclude": ["node_modules", ".vscode-test"]
}
